<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Space
        android:layout_width="10px"
        android:layout_height="100px"
        android:background="@color/red"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="task"
        android:id="@+id/todoItemText"
        android:textColor="@color/primary"
        android:textSize="@dimen/primaryText"
        android:layout_toEndOf="@+id/space2"
        android:layout_marginLeft="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="No Due Date"
        android:id="@+id/todoItemDueDate"
        android:textColor="@color/secondary"
        android:textSize="@dimen/secondaryText"
        android:layout_below="@+id/todoItemText"
        android:layout_alignStart="@+id/todoItemText" />

    <TextView
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="priority"
        android:layout_width="100dp"
        android:id="@+id/itemPriority"
        android:textSize="@dimen/secondaryText"
        android:gravity="right"
        android:layout_alignTop="@+id/todoItemDueDate"
        android:layout_alignParentEnd="true" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="20px"
        android:layout_below="@+id/todoItemDueDate"
        android:layout_alignParentStart="true" />

</RelativeLayout>